<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProductInfo">

    <TextView
        android:id="@+id/barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barcode Number:"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/inputProductCode"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:height="30pt"
        android:textColor="#fff"
        android:inputType="" />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name:"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/inputProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="30pt"
        android:layout_gravity="top"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/inputQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="30pt"
        android:inputType="number"
        android:text=""
        android:layout_gravity="top"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/datePickedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiration Date"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/datePicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:height="30pt"
        android:textSize="10pt"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dialogeventDelete"
            android:text="Delete"/>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dialogeventUpdate"
            android:text="Update"/>

    </LinearLayout>



</LinearLayout>